<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:singleLine="true"
        android:text="Procrastinator Express"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:textSize="34sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/categ_btn"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_margin="16dp"
        android:backgroundTint="?android:attr/colorActivatedHighlight"
        android:text="Excuse categories"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?attr/colorOnPrimaryFixedVariant"
        android:textSize="34sp"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="20sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/chat_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <Button
        android:id="@+id/chat_btn"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_margin="16dp"
        android:backgroundTint="?android:attr/colorActivatedHighlight"
        android:text="Chat"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?attr/colorOnPrimaryFixedVariant"
        android:textSize="34sp"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="20sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categ_btn"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <Button
        android:id="@+id/quit_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="?attr/colorTertiary"
        android:text="Quit"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:textSize="26sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeMinTextSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
